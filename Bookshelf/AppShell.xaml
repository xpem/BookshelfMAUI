<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bookshelf.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bookshelf.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellItem Route="Login" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:Login}" />
    </ShellItem>

    <ShellItem Route="Main" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate local:Main}" />
    </ShellItem>

    
    <FlyoutItem Title="Estante" >
        <ShellContent ContentTemplate="{DataTemplate local:AddBook}" Route="AddBook" />
    </FlyoutItem>

    
</Shell>
