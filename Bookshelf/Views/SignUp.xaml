<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bookshelf.Views.SignUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Icons="clr-namespace:Models;assembly=Models"
    xmlns:components="clr-namespace:Bookshelf.Components"
    xmlns:viewmodels="clr-namespace:Bookshelf.ViewModels"
    Title="Cadastrar Usuário"
    x:DataType="viewmodels:SignUpVM"
    Shell.FlyoutBehavior="Disabled"
    Style="{StaticResource ContentPage}">
    <ContentPage.Resources>
        <Style x:Key="Icon" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontFamily" Value="FontAwesome" />
            <Setter Property="Padding" Value="0,0,0,10" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView HorizontalOptions="CenterAndExpand">
            <Frame IsEnabled="{Binding IsNotBusy}" Style="{StaticResource FramePrimary}">
                <VerticalStackLayout>
                    <Label
                        SemanticProperties.Description="Imagem da tela de usuários"
                        Style="{StaticResource Icon}"
                        Text="{x:Static Icons:IconFont.User}" />
                    <components:BorderedEntry
                        LabelText="Nome"
                        MaxLength="150"
                        Text="{Binding Name}" />
                    <components:BorderedEntry
                        LabelText="Email"
                        MaxLength="250"
                        Text="{Binding Email}" />
                    <components:BorderedEntry
                        IsPassword="True"
                        LabelText="Senha"
                        MaxLength="20"
                        Text="{Binding Password}" />
                    <components:BorderedEntry
                        IsPassword="True"
                        LabelText="Confirmação da senha"
                        MaxLength="20"
                        Text="{Binding ConfirmPassword}" />

                    <Button
                        Margin="0,10,0,20"
                        Command="{Binding SignUpCommand}"
                        ContentLayout="Left, 10"
                        IsEnabled="{Binding BtnCreateUserIsEnabled}"
                        SemanticProperties.Description="Criar usuário"
                        Style="{StaticResource BtnPrimary}"
                        Text="Cadastrar">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FontAwesome"
                                Glyph="{x:Static Icons:IconFont.UserPlus}"
                                Size="15"
                                Color="Black" />
                        </Button.ImageSource>
                    </Button>
                </VerticalStackLayout>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
