<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bookshelf.Views.FirstSyncProcess"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Icons="clr-namespace:Bookshelf.Resources.Fonts.Styles"
    xmlns:vm="clr-namespace:Bookshelf.ViewModels"
    x:DataType="vm:FirstSyncProcessVM"
    NavigationPage.HasBackButton="False"
    Style="{StaticResource ContentPage}">
    <ContentPage.Resources>
        <Style x:Key="Icon" TargetType="Label">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="FontSize" Value="70" />
            <Setter Property="FontFamily" Value="FontAwesome" />
            <Setter Property="Padding" Value="0,0,0,10" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout VerticalOptions="Center">
        <Label Style="{StaticResource Icon}" Text="{x:Static Icons:IconFont.Book}" />
        <Label
            Margin="0,0,0,10"
            HorizontalOptions="Center"
            Text="Sincronizando..."
            TextColor="White"
            VerticalOptions="Center" />
        <ProgressBar
            Margin="5,0,5,0"
            Progress="{Binding Progress}"
            ProgressColor="{StaticResource PrimaryColor}" />
    </VerticalStackLayout>
</ContentPage>