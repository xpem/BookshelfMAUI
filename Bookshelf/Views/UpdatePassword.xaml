<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookshelf.Views.UpdatePassword"
             Style="{StaticResource ContentPage}" 
             Title="Recuperar senha" >
    <ContentPage.Content>
        <StackLayout  VerticalOptions="Center"  >
            <Frame Style="{ StaticResource MainFrame }">
                <StackLayout Style="{StaticResource MainStackLayout}">
                    
                    <!--<Image SemanticProperties.Description="Alterar senha" HeightRequest="30"  Style="{ StaticResource ImgIcon }" Source="unlock_solid_30.png" />-->

                    <Label Text="Email" Style="{StaticResource LblEntry}"/>
                    <Entry Text="{Binding Email}" x:Name="EntEmail" MaxLength="400" Style="{StaticResource Entry}" />

                    <Button Text="Enviar Email de Recuperação de Senha" x:Name="BtnConfirmar" Style="{StaticResource MainBtn}" Command="{Binding UpdatePasswordCommand}" Margin="0,10,0,5"
                             FontSize="10" ImageSource="envelope_solid_20_w.png" ContentLayout="Left, 20" /> 
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
