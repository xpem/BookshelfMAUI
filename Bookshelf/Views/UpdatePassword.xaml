<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bookshelf.Views.UpdatePassword"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Icons="clr-namespace:Models;assembly=Models"
    xmlns:components="clr-namespace:Bookshelf.Components"
    xmlns:vm="clr-namespace:Bookshelf.ViewModels"
    Title="Recuperar senha"
    x:DataType="vm:UpdatePasswordVM"
    Shell.FlyoutBehavior="Disabled"
    Style="{StaticResource ContentPage}">
    <ScrollView HorizontalOptions="CenterAndExpand">
        <StackLayout>
            <Border IsEnabled="{Binding IsNotBusy}" Style="{StaticResource BorderPrimary}">
                <VerticalStackLayout>
                    <components:BorderedEntry
                        LabelText="Email"
                        MaxLength="250"
                        Text="{Binding Email}" />
                    <Button
                        Margin="0,10,0,10"
                        Command="{Binding UpdatePasswordCommand}"
                        ContentLayout="Left, 20"
                        SemanticProperties.Description="Enviar email de atualização de senha"
                        Style="{StaticResource BtnPrimary}"
                        Text="Enviar Email">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FontAwesome"
                                Glyph="{x:Static Icons:IconFont.Envelope}"
                                Size="15"
                                Color="Black" />
                        </Button.ImageSource>
                    </Button>
                    <Label
                        Margin="0,20,0,0"
                        FontAttributes="Italic"
                        FontFamily="OpenSansRegular"
                        FontSize="10"
                        HorizontalOptions="End"
                        Text="*Será enviado um email com um link para a atualização de sua senha."
                        TextColor="{StaticResource Gray100}"
                        VerticalOptions="End" />
                </VerticalStackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
